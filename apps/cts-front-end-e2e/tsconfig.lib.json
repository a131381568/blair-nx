{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"composite": true,
		"types": [
			"node",
			"@playwright/test",
			"vite/client"
		],
		"declaration": true,
		"outDir": "../../dist/out-tsc"
	},
	"include": [
		"src/**/*.js",
		"src/**/*.jsx",
		"src/**/*.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"playwright.config.ts"
	],
	"exclude": [
		"src/**/__tests__/*",
		"src/**/*.spec.ts",
		"src/**/*.test.ts",
		"src/**/*.spec.tsx",
		"src/**/*.test.tsx",
		"src/**/*.spec.js",
		"src/**/*.test.js",
		"src/**/*.spec.jsx",
		"src/**/*.test.jsx",
		"src/**/*.spec.vue",
		"src/**/*.test.vue"
	]
}
