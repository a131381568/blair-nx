{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"types": [
			"vitest/globals",
			"vitest/importMeta",
			"vite/client",
			"node",
			"vitest"
		],
		"outDir": "../../dist/out-tsc"
	},
	"include": [
		"vite.config.ts",
		"vitest.config.ts",
		"src/**/*.test.ts",
		"src/**/*.spec.ts",
		"src/**/*.test.tsx",
		"src/**/*.spec.tsx",
		"src/**/*.test.js",
		"src/**/*.spec.js",
		"src/**/*.test.jsx",
		"src/**/*.spec.jsx",
		"src/**/*.d.ts",
		"src/**/*.cy.ts",
		"components.d.ts",
		"src/**/*.vue"
	],
	"exclude": ["node_modules"]
}
