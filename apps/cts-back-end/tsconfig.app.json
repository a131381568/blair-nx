{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"composite": true,
		"target": "es2021",
		"emitDecoratorMetadata": true,
		"baseUrl": ".",
		"module": "commonjs",
		"paths": {
			"@cts-shared": ["../../libs/cts-shared/index.ts"],
			"@cts-shared/*": ["../../libs/cts-shared/*"],
			"@/*": ["./src/*"]
		},
		"types": [
			"node",
			"@types/node"
		],
		"allowJs": true,
		"strictNullChecks": true,
		"outDir": "../../dist/out-tsc",
		"sourceMap": false
	},
	"include": [
		"src/**/*.ts",
		"src/typings.d.ts"
	],
	"exclude": [
		"jest.config.ts",
		"src/**/*.spec.ts",
		"src/**/*.test.ts",
		"**/*.spec.ts"
	]
}
