{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"composite": true,
		"target": "es2021",
		"emitDecoratorMetadata": true,
		"module": "commonjs",
		"types": [
			"node",
			"@types/node"
		],
		"allowJs": true,
		"strictNullChecks": true,
		"outDir": "../../dist/out-tsc",
		"sourceMap": false
	},
	"references": [
		{
			"path": "../../libs/cts-shared"
		}
	],
	"include": ["src/**/*.ts", "src/typings.d.ts", "../../libs/cts-shared/**/*.ts"],
	"exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"]

}
