{
  "version": "2.0.0",
  "presentation": {
    "echo": false,
    "reveal": "always",
    "focus": false,
    "panel": "dedicated",
    "showReuseMessage": true
  },
  "tasks": [
    {
        "label": "Create terminals",
        "dependsOn": [
          "ctsf-local",
          "ctsb-local"
        ],
        // Mark as the default build task so cmd/ctrl+shift+b will create them
        "group": {
          "kind": "build",
          "isDefault": true
        },
        // Try start the task on folder open
        "runOptions": {
          "runOn": "folderOpen"
        }
      },
      {
          "label": "ctsf-local",
          "type": "shell",
          "command": "pnpm exec nx serve cts-front-end",
          "problemMatcher": [],
          "group": "none",
          "presentation": {
              "reveal": "always",
              "panel": "new"
          }
      },
      {
          "label": "ctsb-local",
          "type": "shell",
          "command": "pnpm exec nx serve cts-back-end",
          "problemMatcher": [],
          "group": "none",
          "presentation": {
              "reveal": "always",
              "panel": "new"
          }
      }
  ]
}
